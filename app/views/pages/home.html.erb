<div class="container home-sign-up-links">
    <div class="row">
            <div class="col-md-8">
                <div class="well well-home row">
                    <h3 class="text-center">Freelancers</h3>
                    <div class = "text-center">
                    <% @freelancers.each do |char| %>
                        <%= link_to freelancer_path(id: char.id) do %>
                            <div class = "freelancer-img"><%= image_tag char.image_url, class: "grn-border" %></div>
                        <% end %>
                    <% end %>
                    </div>
                </div>
                <div class = "row well carousel-well">
                    <div id="carousel-event" class="col-md-12 carousel slide" data-ride="carousel">
                      <!-- Wrapper for slides -->
                      <div class="carousel-inner" role="listbox">
                        <% @events.each do |e| %>
                        <div class="item active">
                          <%= link_to event_path(e.id) do %>
                          <h2><%= e.name %></h2>
                          <span><%= e.date %>&emsp;<%= e.time %></span>
                          <% end %>
                        </div>
                        <% end %>
                        <div class="item">
                          <h2>More Events Coming Soon!</h2>
                        </div>
                      </div>
                    
                      <!-- Controls -->
                      <a class="left carousel-control" href="#carousel-event" role="button" data-slide="prev">
                        <span class="sr-only">Previous</span>
                      </a>
                      <a class="right carousel-control" href="#carousel-event" role="button" data-slide="next">
                        <span class="sr-only">Next</span>
                      </a>
                    </div>
                </div>
                <div class = "row">
                    <div class = "col-md-6 league-col well">
                        <h3>New Teams</h3>
                        <% @teams.each do |t| %>
                            <h4><%= t.name %></h4>
                        <% end %>
                    </div>
                    <div class = "col-md-6 league-col well">
                        <h3>Free Agents</h3>
                        <% @users.each do |u| %>
                            <%= link_to user_path(id: u.user_id) do %>
                                <% if !u.avatar %>
                                    <%= image_tag u.avatar.url, class: 'user-home-avatar' %>
                                <% elsif %>
                                    <i class="fa fa-superpowers"></i>
                                <% end %>
                            <% end %>
                          <%= u.username %>&emsp;
                          <span class = "label label-<%= u.favorite_role.downcase %>">
                            <%= u.favorite_role %>
                          </span>
                        <% end %>
                    </div>
                </div>
                <!-- Guides to be implemented
                <div class="well well-home row">
                    <h2 class="text-center">Top Guides</h2>
                    </% 6.times do |x| %>
                        <div class = "col-md-4 grn-border home-guide-box">
                            <div class = "col-sm-4">
                                <div class = "freelancer-img grn-border"></div>
                            </div>
                            <div class = "col-sm-8">
                                <div class = "home-guide-text">
                                    <h4>Guide </%= x + 1 %></h4>
                                    <span>By User</span>
                                </div>
                            </div>
                        </div>
                    </% end %>
                </div> 
                -->
            </div>
            <div class="col-md-4">
                <div class="well well-home">
                    <% if user_signed_in? %>
                        <% if current_user.profile %>
                            <h2 class="text-center">Get Involved</h2>
                            <%= link_to "Create a Guide", new_team_path, class: 'btn btn-block btn-info' %>
                            <%= link_to "Join the PPL", ppl_path, class: 'btn btn-block btn-success' %>
                        <% else %>
                            <h2 class = "text-center">Your Profile</h2>
                            <p>Create your profile to start taking part in the community!</p>
                            <%= link_to "Create Your Profile!", new_user_profile_path(user_id: current_user.id), class: 'btn btn-primary btn-lg btn-block' %>
                        <% end %>
                    <% else %>
                        <h2 class="text-center">Sign Up</h2>
                        <h4>Sign up now to become a member of the Prep Phase community,
                        allowing you to create guides, join the Prep Phase League and more!</h4>
                        <%= link_to "Sign Up Now!", new_user_registration_path, class: "btn btn-primary btn-lg btn-block" %>
                    <% end %>
                </div>
                <div class = "well well-home">
                    <h2>PPL Leaderboard</h2>
                    <h3 class = "text-center">Coming Soon</h3>
